<h1>Hello <%=@user.username.capitalize %> ,you can add new posts here</h1> 
<br><br>
<% @post.errors.each do |error| %>
<%= error %>
<% end %>
<%= form_with(model:@post,local: true) do |f| %>
<%= f.label "Post name: "%>
<%= f.text_field :post_name %><br><br><br>  
<%= f.label "Description"%><br><br>
<%= f.text_area :post_description %><br><br><br>
<%= f.submit "Create" %>
<% end %>
